.content_menu li a{
	display: inline-block;
	width: 31%;
	margin-right: 2%;
	float: left;
	background-size: 100% 160px;
	padding: 3.5% 5%;
	border-radius: 4px;
}

.content_menu_word{
	margin-left: 50px;
	color: #fff;
}

.content_menu_word span{
	font-size: 26px;
}

.content_menu_word div{
	font-size: 50px;
    text-align: center;
}

.content_approval{
	background: url("../images/approval_bg.png") no-repeat center;
}

.content_adopt{
	background: url("../images/adopt_bg.png") no-repeat center;
}

.content_refuse{
	background: url("../images/refuse_bg.png") no-repeat center;
}

.content_waiting{
	background: url("../images/waiting_bg.png") no-repeat center;
}

.content_service{
	background: url("../images/service_bg.png") no-repeat center;
}

.content_complete{
	background: url("../images/complete_bg.png") no-repeat center;
}

.state-content{
	background: #f8f6f2;
	box-shadow: 0 0 4px 0 rgba(214,214,214,0.50);
	border-radius: 4px;
	padding: 30px 0 0 30px;
	margin-right: 2%;
}

.state-content .state-contentc{
	width: 31%;
	margin-right: 2.3%;
	margin-bottom: 30px;
	background: #fff;
	box-shadow: 0 0 8px 0 rgba(212,212,212,0.72);
	border-radius: 4px;
	text-indent: 20px;
	position: relative;
	float: left;
}

.state-content .state-contentc h1{
	font-size: 26px;
	font-weight: bold;
	line-height: 60px;
}

.state-content .state-contentc p{
	color:#888 ;
	font-size: 18px;
	line-height: 1.8em;
}

.state-content .state-contentc button{
	border: none;
	outline: none;
	background: #4a90e2;
	width: 60px;
	height: 30px;
	border-radius: 4px;
	color: #fff;
	font-size: 16px;
	margin: 10px 30px 15px 20px;
}

.state-content .state-contentc .div1{
	width: 60px;
	height: 60px;
	border-radius: 30px;
	position: absolute;
	right: 30px;
	bottom: 30px;
	text-align: center;
	color: #fff;
	line-height: 60px;
	text-indent: 0;
}

.approval_btn{
	background-color: #64B1CA;
}

.adopt_btn{
	background-color: #99CC65;
}

.refuse_btn{
	background-color: #B9537A;
}